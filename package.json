{
	"name": "devtime",
	"displayName": "DevTime",
	"description": "Modern watch for Developers",
	"version": "0.1.1",
	"publisher": "DevTime",
	"repository": {
		"type": "git",
		"url": "https://github.com/nikochiko/devtime-vscode.git"
	},
	"engines": {
		"vscode": "^1.46.0"
	},
	"icon": "images/logo.png",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "devtime.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "devtime.login",
				"title": "Devtime: Login"
			},
			{
				"command": "devtime.showConfig",
				"title": "Devtime: Show configuration file"
			},
			{
				"command": "devtime.resetConfig",
				"title": "Devtime: Reset configuration to default"
			},
			{
				"command": "devtime.setup",
				"title": "Devtime: Setup DevTime. (> One command to setup it all!)"
			},
			{
				"command": "devtime.configureApiUrl",
				"title": "Devtime: Set API url for sending heartbeats. (Debug feature)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/node-fetch": "^2.5.8",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	},
	"dependencies": {
		"node-fetch": "^2.6.1"
	}
}
